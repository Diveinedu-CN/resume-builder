<head>
	<meta charset="utf-8">
	<title><%= @config["basic"]["name"] %>-简历</title>
	<link rel="stylesheet" type="text/css" href="css/resume.css">
	<link href="css/bootstrap.min.css" rel="stylesheet" />
	<style type="text/css">
	.dl-horizontal dt{
		text-align: left;
		width: 60px;
	}
	.dl-horizontal dd{
		margin-left: 20px; 
	}
	</style>
</head>
<body>
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-md-offset-2">
				<header class="main row">
					<div class="header">
						<div class="col-md-6 col-sm-12">
							<h1><%= @config["basic"]["name"] %></h1>
							<h3><%= @config["basic"]["designation"] %></h3>
						</div>
						<div class="col-md-6 col-sm-12">
							<img class="photo img-responsive img-circle pull-right"
							src="img/profile.png">
						</div>
					</div>
					<div class="">
						<div class="col-md-6 col-sm-12">
							<dl class="contacts dl-horizontal">
								<dt>性别:</dt>
								<dd><%= @config["basic"]["gender"] %></dd>
								<dt>年龄:</dt>
								<dd><%= @config["basic"]["age"] %></dd>
								<dt>电话:</dt>
								<dd><%= @config["basic"]["phone"] %></dd>
								<dt>邮箱:</dt>
								<dd>
									<a href="mailto:<%= @config["basic"]["email"] %>">
										<%= @config["basic"]["email"] %>
									</a>
								</dd>
								<dt>网站:</dt>
								<dd>
									<a href="<%= @config["basic"]["website"] %>">
										<%= @config["basic"]["website"] %>
									</a>
								</dd>
							</dl>
						</div>
						<div class="col-md-6 col-sm-12">
							<ul class="networks list-unstyled text-right">
								<li>
									<a href="http://www.weibo.com/<%= @config["online_handles"]["weibo"] %>">
										weibo.com/<%= @config["online_handles"]["weibo"] %>
								</a>
							</li>
							<li>
								<a href="https://github.com/<%= @config["online_handles"]["github"] %>">
									github.com/<%= @config["online_handles"]["github"] %>
							</a>
						</li>
						<li>
							<a href="javascript:void();">
								wechat/<%= @config["online_handles"]["weixin"] %>
						</a>
					</li>
				</ul>
			</div>
		</div>
	</header>

	<section class="row">
		<header class="col-md-3">
			<h3>自我评价</h3>
		</header>
		<div class="col-md-9">
			<h3></h3>
			<ul>
			<% @config["self_evaluation"]["contents"].each do |item| %>
				<li><%= item %></li>
			<% end %>
			<ul/>
		</div>
	</section>

	<section class="row skills">
		<header class="col-md-3">
			<h3>专业技能</h3>
		</header>
		<div class="col-md-9">
			<div class="row skills">
				<% @config["skills"].each do |item| %>
					<div class="col-md-6">
						<h4><%= item["title"] %></h4>
						<ul>
							<% item["contents"].each do |sub_item| %>
								<li><%= sub_item %></li>
							<% end %>
						</ul>
					</div>
				<% end %>
			</div>
		</div>
	</section>
	
	<section class="row">
		<header class="col-md-3">
			<h3>工作经验</h3>
		</header>
		<div class="col-md-9">
			<% @config["work_experience"].each do |item| %>
				<div class="item">
					<h3><%= item["company"] %></h3>
					<strong><%= item["designation"] %></strong>
					<p class="sticky"><%= item["time_span"] %></p>
					<p class="sticky">
						<a href="<%= item["website"] %>"><%= item["website"] %></a>
					</p>
					<p><%= item["summary"] %></p>
					<ul>
						<% item["responsibilities"].each do |responsibility| %>
							<li><%= responsibility %></li>
						<% end %>
					</ul>
				</div>
			<% end %>
		</div>
	</section>

	<section class="row">
		<header class="col-md-3">
			<h3>项目经验</h3>
		</header>
		<div class="col-md-9">
			<% @config["projects"].each do |item| %> 
				<div class="item">
					<h3><%= item["name"] %></h3>
					<p class="sticky">
						<a href="<%= item["website"] %>"><%= item["website"] %></a>
					</p>
					<strong><%= item["role"] %></strong><br />
					<p class="sticky"><%= item["time_span"] %></p>
					<p><%= item["summary"] %></p>
					<ul>
						<% item["bullet_points"].each do |point| %> 
							<li><%= point %></li>
						<% end %>
					</ul>
				</div>
			<% end %>
		</div>
	</section>

  <section class="row">
    <header class="col-md-3">
      <h3>教育经历</h3>
    </header>
    <div class="col-md-9"> 
      <% @config["education"].each do |item| %> 
		    <div>
		      <h3><%= item["institution"] %></h3>
		      <p class="sticky"><%= item["course"] %></p>
		      <p class="sticky"><%= item["time_span"] %></p>
		    </div>
      <% end %>
    </div>
  </section>
  
  <section class="row">
		<header class="col-md-3">
		  <h3>个人兴趣</h3>
		</header>
		<div class="col-md-9">
		<ul>
		  <% @config["interests"].each do |interest| %>
		  	<li><%= interest %></li>
		  <% end %>
		</ul>
		</div>
	</section>

</div>
</body>
